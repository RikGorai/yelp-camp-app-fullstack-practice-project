<%- layout('layouts/boilerplate') %>
<link rel="stylesheet" href="../../stylesheets/fromValidation.css">
<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds/new" method="post" id="Form" novalidate>
            <div class="mb-3">
                <label class="form-label" for="title">Title :</label>
                <input class="form-control field" type="text" name="campgrounds[title]" id="title" required>
                <div class="error" id="titleError"></div>
            </div class="mb-3">
            <div>
                <label class="form-label" for="location">Location :</label>
                <input class="form-control field" type="text" name="campgrounds[location]" id="location" required>
                <div class="error" id="locationError"></div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="Image">Image :</label>
                <input class="form-control field" type="text" name="campgrounds[img]" id="Image" required>
                <div class="error" id="ImageError"></div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Price :</label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input class="form-control" type="text" name="campgrounds[price]" id="price" placeholder="0.00" min="1" max="3000" required>
                </div>
                <div class="error" id="priceError"></div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description :</label>
                <textarea class="form-control field" type="text" name="campgrounds[description]" id="description" required></textarea>
                <div class="error" id="descriptionError"></div>
            </div>
           

            <button class="btn btn-success mt-3">Add Campground</button>
            <a href="/campgrounds" class="btn btn-secondary mt-3">Back</a>

        </form>

    </div>
    

</div>

<script src="../../javascipts/formValidation.js"></script>
    
